{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "error",
    "no-inner-declarations": "error",
    "no-lonely-if": "error",
    "no-magic-numbers": 0,
    "no-shadow-restricted-names": "error",
    "no-unused-expressions": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "h"
      }
    ],
    "no-useless-return": "error",
    "no-var": "error",
    "no-throw-literal": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-promise-reject-errors": "error",
    "no-cond-assign": "error"
  }
}
